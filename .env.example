# NextAuth Configuration (REQUIRED)
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# For production:
# NEXTAUTH_URL=https://yourdomain.com

# MongoDB Configuration (Optional - currently not used for authentication)
# Uncomment these when you want to use MongoDB for user storage
# dbUserName=your_mongodb_username
# dbPassword=your_mongodb_password
# cluster=your_mongodb_cluster_url

# AWS S3 Configuration for Image Upload
# Get these values from your AWS account (IAM > Users > Security Credentials)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=auction-app-images

# Alternative: GCP Cloud Storage Configuration (if using GCP instead of AWS)
# Uncomment these if you want to use GCP instead
# GCP_PROJECT_ID=your_gcp_project_id
# GCP_BUCKET_NAME=auction-app-images
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# ImageKit Configuration for Image Upload/Management
# Get these from your ImageKit dashboard (https://imagekit.io/)
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id

